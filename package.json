{
  "name": "420connect-marketplace",
  "version": "1.0.0",
  "description": "Multi-app cannabis delivery marketplace platform",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "start:all": "npm run dev:all",
    "dev:all": "npm run dev --workspace=apps/merchant-portal & npm run dev --workspace=apps/admin-dashboard & npm run dev --workspace=apps/customer-app & npm run dev --workspace=apps/driver-app",
    "dev:merchant": "npm run dev --workspace=apps/merchant-portal",
    "dev:admin": "npm run dev --workspace=apps/admin-dashboard",
    "dev:customer": "npm run dev --workspace=apps/customer-app",
    "dev:driver": "npm run dev --workspace=apps/driver-app",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "~5.9.3"
  }
}
